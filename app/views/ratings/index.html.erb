<h1>Listing ratings</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Rating</th>
    <th>Comment</th>
    <th>Id</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ratings.each do |rating| %>
  <tr>
    <td><%= rating.name %></td>
    <td><%= rating.rating %></td>
    <td><%= rating.comment %></td>
    <td><%= rating.id %></td>
    <td><%= link_to 'Show', rating %></td>
    <td><%= link_to 'Edit', edit_rating_path(rating) %></td>
    <td><%= link_to 'Destroy', rating, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

